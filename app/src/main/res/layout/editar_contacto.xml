<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/parteArriba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="#F9E1B7"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/nombre_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="@android:integer/config_longAnimTime"
                android:layout_toEndOf="@id/contacto_edit"
                android:layout_toRightOf="@id/contacto_edit"
                android:hint="Nombre"
                android:maxLength="12"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/apellido_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="@android:integer/config_longAnimTime"
                android:layout_toEndOf="@id/contacto_edit"
                android:layout_toRightOf="@id/contacto_edit"
                android:layout_below="@id/nombre_edit"
                android:maxLength="30"
                android:layout_centerVertical="true"
                android:hint="Apellidos"
                />
            <ImageView
                android:id="@+id/contacto_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cabeza"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/parteAbajo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/telefono_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="@android:integer/config_longAnimTime"
                android:hint="Tlf."
                android:layout_toEndOf="@id/iconoTelefono"
                android:layout_toLeftOf="@id/iconoTelefono"
                android:layout_marginTop="40dp"
                android:inputType="phone"/>

            <ImageView
                android:id="@+id/iconoTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="50dp"/>
            <EditText
                android:id="@+id/email_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/telefono_edit"
                android:layout_toEndOf="@id/iconoEmail"
                android:layout_toRightOf="@id/iconoEmail"
                android:hint="Correo"
                android:ems="@android:integer/config_longAnimTime"
                android:inputType="textEmailAddress"/>
            <ImageView
                android:id="@+id/iconoEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/email"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/telefono_edit"/>
            <TextView
                android:id="@+id/tV_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_edit"
                android:text="Etiquetar como: "
                android:layout_margin="10dp"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tV_edit">
                <RadioButton
                    android:id="@+id/rB_Familia_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Familia"/>
                <RadioButton
                    android:id="@+id/rB_Trabajo_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trabajo"/>
                <RadioButton
                    android:id="@+id/rB_Amigos_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amigos"/>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/check"
        app:backgroundTint="#F9E1B7"
        app:layout_anchor="@id/parteAbajo"
        app:layout_anchorGravity="bottom|right"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>